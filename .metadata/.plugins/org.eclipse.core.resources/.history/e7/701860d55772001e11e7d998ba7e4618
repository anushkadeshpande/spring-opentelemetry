server:
  port: 8081

spring:
  application:
    name: movie-info-service
    
micrometer:
  tracing:
    otel:
      collector:
        url: http://localhost:4317
        
opentelemetry:
  exporter:
    otlp:
      endpoint: http://localhost:4318/v1/traces

tracing:
  url: http://localhost:4318/v1/traces

management:
  tracing:
    sampling:
      probability: 1.0

logging:
  pattern:
    level: "%5p [${spring.application.name:},%X{traceId:-},%X{spanId:-}]"